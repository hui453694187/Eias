<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/ll_radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            
        android:layout_margin="10dp"
            android:id="@+id/radio_img"
            android:layout_width="@dimen/text_ico"
            android:layout_height="@dimen/text_ico"
            android:background="@drawable/redio_select" />

        <TextView
            android:id="@+id/type_item_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left|center_vertical"
            android:text="Hello"
            android:textSize="@dimen/text_size_h8" >
        </TextView>
    </LinearLayout>

</LinearLayout>