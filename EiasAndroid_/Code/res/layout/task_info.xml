<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".TaskInfoActivity" >

    <include
        android:id="@+id/home_title"
        layout="@layout/app_title_layout" />

    <TextView 
        android:id="@+id/task_address_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:gravity="left|center"
        android:text="@string/taskInfo_address"
        android:visibility="gone"
        android:background="@drawable/home_top_tips_bg"
        />
    <FrameLayout
        android:id="@+id/task_Info_frameLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12" >       
    </FrameLayout>

</LinearLayout>